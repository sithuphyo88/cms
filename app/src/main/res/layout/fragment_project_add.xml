<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/page_padding">

        <android.support.design.widget.TextInputLayout
        android:id="@+id/txtlayProjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txtSiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvwSiteName"
            android:layout_gravity="center_horizontal|top"
            android:hint="@string/label_project_name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtlayStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlayProjectName">
        <EditText
            android:id="@+id/txtStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvwStartDate"
            android:ems="10"
            android:hint="@string/label_start_date"
            android:inputType="date" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtLayEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlayStartDate">
    <EditText
        android:id="@+id/txtEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvwEndDate"
        android:ems="10"
        android:hint="@string/label_end_date"
        android:inputType="date" />
    </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spnCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLayEndDate"
            android:minHeight="60dp"
            android:prompt="@string/label_customer"
            android:spinnerMode="dialog" />

        <TextView
        android:id="@+id/tvwProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@+id/spnCustomer"
        android:paddingTop="@dimen/padding_top_between_controls"
        android:text="@string/label_progress" />

    <RelativeLayout
        android:id="@+id/relProgress"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/tvwProgress">
        <ProgressBar
            android:id="@+id/proProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/progressbar_style" />
        <TextView
            android:id="@+id/tvwProgressValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="#4d5359"
            android:textSize="15dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/butDesigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relProgress"
        android:paddingTop="@dimen/padding_top_between_controls"
        android:text="@string/label_sites"
        android:theme="@style/MyButton" />

</RelativeLayout>
</ScrollView>
