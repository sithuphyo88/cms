<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tblUserList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/page_padding" >
    <TextView
        android:id="@+id/tvwDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/list_title_size"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvwEngineerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvwDate"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/list_title_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvwDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvwEngineerName"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp" />

    <RelativeLayout
        android:id="@+id/relProgress"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#d7d7d7">
        <ProgressBar
            android:id="@+id/proProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar_style" />
        <Button
            android:id="@+id/butProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="30%"
            android:textColor="#4d5359"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>
